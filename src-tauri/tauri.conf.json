{
  "productName": "Smoothie",
  "version": "1.0.0",
  "identifier": "com.smoothie.desktop",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Smoothie",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https:; connect-src ipc: http://ipc.localhost https://*.supabase.co wss://*.supabase.co"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
